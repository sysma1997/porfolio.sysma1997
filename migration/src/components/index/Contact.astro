---
const { styleList } = Astro.props;

const contacts: Array<{ icon: string; name: string; link: string }> = [
    {
        icon: "fab fa-github",
        name: "GitHub",
        link: "https://github.com/sysma1997",
    },
    {
        icon: "fab fa-linkedin",
        name: "LinkedIn",
        link: "https://www.linkedin.com/in/sebastian-moreno-acero-0a3138187",
    },
    {
        icon: "fas fa-envelope",
        name: "Email",
        link: "mailto: sysma1997@gmail.com",
    },
];
---

<div
    class={styleList === undefined || styleList === null || styleList === true
        ? "contactList"
        : "contactList2"}
>
    {contacts.map((contact) => 
        <a class="contactItem" href={contact.link} target="_blank">
            <i class={`contactItemIcon ${contact.icon}`} />
            {contact.name}
        </a>
    )}
</div>
